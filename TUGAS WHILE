#include <iostream>
using namespace std;

// TUGAS WHILE FATIH

int main (){
	
int o = 100;
	// Menampilkan Angka Ganjil Genap Menggunakan While 100-1000 
	cout << "Masukan angka dari range 100-1000 :"<< endl;
	cin >> o ;
	while( o <= 1000 ){
	  if ( o % 2 == 0 ){
			cout << o << " : ADALAH BILANAGAN GENAP " <<endl ; o++;
		
	}else{
		cout << o << " : ADALAH BILANGAN GANJIL " <<endl ; o++;	
		}
}

return 0;
}
